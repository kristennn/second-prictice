<div class="col-md-12">
  <div class="show-header">
    <h2><%= @group.title %></h2>
    <p><%= @group.description %></p>
    <%= link_to("Write a Post", new_group_post_path(@group), class: "btn btn-primary pull-right") %>
    <table class="table">
      <thead>
        <tr>
          <td>文章内容</td>
          <td>发表者</td>
          <td>发表时间</td>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        </tr>
        <% end %>
      </tbody>

    </table>

  </div>
</div>
