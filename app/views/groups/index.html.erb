<div class="col-md-12">
  <div class="table-head">
    <%= link_to("New Group", new_group_path(@group), class: "btn btn-primary pull-right") %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <td>Time</td>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
      <tr>
        <td>#</td>
        <td><%= link_to(group.title, group_path(group)) %></td>
        <td><%= group.description %></td>
        <td>
          <%= link_to("Edit", edit_group_path(group), class: "btn btn-sm btn-default") %>
          <%= link_to("Delete", group_path(group), method: :delete, class: "btn btn-sm btn-default", data: { confirm: "Are you sure?"}) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
