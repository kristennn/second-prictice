<div class="col-md-12">
 <h2 class="text-center">我发表的文章</h2>
 <table class="table">
   <thead>
     <tr>
       <td>文章内容</td>
       <td>发表者</td>
       <td>发表时间</td>
     </tr>
   </thead>

   <tbody>
     <% @posts.each do |post| %>
     <tr>
       <td><%= post.content %></td>
       <td><%= post.user.email %></td>
       <td><%= post.created_at %></td>
     </tr>
     <% end %>
   </tbody>

 </table>

</div>
